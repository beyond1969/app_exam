<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="50px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="날짜 별 대기질"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/edit_day"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="YYYYMMDD"
                    android:layout_weight="2"/>
                <EditText
                    android:id="@+id/edit_location_0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="지역명"
                    android:layout_weight="2"/>
                <Button
                    android:id="@+id/btn_search_0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="조회"
                    android:layout_weight="1"
                    android:onClick="Onclick"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="50px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘의 미세먼지"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/edit_location_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="지역명"
                    android:layout_weight="4"/>
                <Button
                    android:id="@+id/btn_search_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="조회"
                    android:layout_weight="1"
                    android:onClick="Onclick"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_hw2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="HW2-2"
                android:onClick="Onclick"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>